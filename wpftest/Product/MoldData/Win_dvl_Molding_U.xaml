<UserControl
    x:Class="WizMes_WellMade.Win_dvl_Molding_U"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_WellMade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="Usercontrol_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Background="{DynamicResource WizMes_WellMade}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblDate"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblDate_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkDate"
                                Checked="chkDate_Checked"
                                Unchecked="chkDate_Unchecked" />
                        </Viewbox>
                        <TextBlock Margin="-5,0,0,0" Text="금형발주일" />
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    Padding="0"
                    VerticalContentAlignment="Center"
                    IsEnabled="False" />
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32.5*" />
                    <ColumnDefinition Width="32.5*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnToday_Click"
                    Content="금일" />
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="2"
                    Padding="0"
                    VerticalContentAlignment="Center"
                    IsEnabled="False" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblMoldNoSrh"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblMoldNoSrh_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkMoldNoSrh"
                                Checked="chkMoldNoSrh_Checked"
                                Unchecked="chkMoldNoSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock Margin="-5,0,0,0" Text="금형명" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtMoldNoSrh"
                    Grid.Column="1"
                    Padding="0"
                    VerticalContentAlignment="Center"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblArticleSrh"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkArticleSrh"
                                Checked="chkArticleSrh_Checked"
                                Unchecked="chkArticleSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock Margin="-5,0,0,0" Text="품     번" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtArticleSrh"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False"
                    Keyboard.KeyDown="txtArticleSrh_KeyDown" />
                <Button
                    x:Name="btnPfArticleSrh"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfArticleSrh_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.Column="2"
                Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="금형식별표색상" />
                    </StackPanel>
                </Label>
                <ComboBox
                    x:Name="cboColor"
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="White" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label VerticalContentAlignment="Center" MouseLeftButtonUp="lblNeedInspectSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkNeedInspectSrh" />
                        </Viewbox>
                        <TextBlock
                            Margin="-5,0,0,0"
                            VerticalAlignment="Center"
                            Text="금형 점검필요" />
                    </StackPanel>
                </Label>
                <Label
                    x:Name="lblNeedWashingSrh"
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblNeedWashing_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkNeedWashing" />
                        </Viewbox>
                        <TextBlock
                            Margin="-5,0,0,0"
                            VerticalAlignment="Center"
                            Text="금형 세척필요" />
                    </StackPanel>
                </Label>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label VerticalContentAlignment="Center" MouseLeftButtonUp="lblExpiredSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkExpiredSrh" />
                        </Viewbox>
                        <TextBlock
                            Margin="-5,0,0,0"
                            VerticalAlignment="Center"
                            Text="사용기한 경과" />
                    </StackPanel>
                </Label>
                <Label
                    x:Name="lblDisCardSrh"
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblDisCardSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox x:Name="chkDisCardSrh" />
                        </Viewbox>
                        <TextBlock
                            Margin="-5,0,0,0"
                            VerticalAlignment="Center"
                            Text="폐기건 포함" />
                    </StackPanel>
                </Label>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" VerticalContentAlignment="Center">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkMainTain"
                                VerticalAlignment="Center"
                                IsChecked="False" />
                        </Viewbox>
                        <TextBlock
                            Margin="-5,0,0,0"
                            VerticalAlignment="Center"
                            Text="유지추가" />
                    </StackPanel>
                </Label>

            </Grid>


            <Grid
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnAdd"
                        Grid.Column="0"
                        Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiInsert}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblInsert}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnUpdate"
                        Grid.Column="1"
                        Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiUpdate}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblUpdate}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnDelete"
                        Grid.Column="2"
                        Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiDelete}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblDelete}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnSearch"
                        Grid.Column="0"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnSave"
                        Grid.Column="1"
                        Click="btnSave_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSave}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSave}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnCancel"
                        Grid.Column="2"
                        Click="btnCancel_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiCancle}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblCancle}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>



            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                x:Name="dgdMain"
                Grid.Column="0"
                Margin="1"
                IsReadOnly="True"
                SelectionChanged="dgdMain_SelectionChanged"
                Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Num, StringFormat=N0}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="순번" />
                    <DataGridTextColumn
                        Binding="{Binding MoldID}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="금형번호" />
                    <DataGridTextColumn
                        Binding="{Binding MoldNo}"
                        CellStyle="{DynamicResource NonNumericDataGridCell}"
                        Header="금형명" />
                    <DataGridTextColumn
                        Binding="{Binding BuyerArticleNo}"
                        CellStyle="{DynamicResource NonNumericDataGridCell}"
                        Header="품번" />
                    <DataGridTextColumn
                        Binding="{Binding MoldSizeX, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="가로Size(mm)" />
                    <DataGridTextColumn
                        Binding="{Binding MoldSizeY, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="세로Size(mm)" />
                    <DataGridTextColumn
                        Binding="{Binding MoldSizeH, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="높이Size(mm)" />
                    <DataGridTextColumn
                        Binding="{Binding MoldQuality}"
                        CellStyle="{DynamicResource NonNumericDataGridCell}"
                        Header="금형재질" />
                    <DataGridTextColumn
                        Binding="{Binding ProdCustomName}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="금형제작업체" />
                    <DataGridTextColumn
                        Binding="{Binding OwnerCustomName}"
                        CellStyle="{DynamicResource NonNumericDataGridCell}"
                        Header="금형소유권" />
                    <DataGridTextColumn
                        Binding="{Binding OwnerOneTimePayYn}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="일시불/상각" />
                    <DataGridTextColumn
                        Binding="{Binding SetDate}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="입고일" />
                    <DataGridTextColumn
                        Binding="{Binding DisCardYN}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="사용여부" />
                    <DataGridTextColumn
                        Binding="{Binding HitCount, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="금형타발수" />
                    <DataGridTextColumn
                        Binding="{Binding StorageName}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="보관위치" />
                    <DataGridTextColumn
                        Binding="{Binding MainUseYN}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="주금형" />
                    <DataGridTextColumn
                        Binding="{Binding MoldPerson}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="담당자" />
                    <DataGridTextColumn Binding="{Binding Comments}" Header="비고" />
                    <DataGridTextColumn
                        Binding="{Binding KCustom}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="고객사명" />
                    <DataGridTextColumn
                        Binding="{Binding ProdOrderDate}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="금형발주일" />
                    <DataGridTextColumn
                        Binding="{Binding ProdDueDate}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="금형완료예정일" />
                    <DataGridTextColumn
                        Binding="{Binding ProdCompDate}"
                        CellStyle="{DynamicResource DataGridCellAndCentering}"
                        Header="금형완료일" />

                    <DataGridTextColumn
                        Binding="{Binding SetCheckProdQty, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="점검주기 타발수" />

                    <DataGridTextColumn
                        Binding="{Binding AfterRepairHitcount}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="점검후타발수" />
                    <DataGridTextColumn
                        Binding="{Binding SetWashingProdQty, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="세척주기 타발수" />
                    <DataGridTextColumn
                        Binding="{Binding AfterWashHitcount}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="세척후타발수" />
                    <DataGridTextColumn
                        Binding="{Binding SetHitCountDate}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="타발수설정일" />
                    <DataGridTextColumn
                        Binding="{Binding SetProdQty}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="수명타발수" />
                    <DataGridTextColumn
                        Binding="{Binding SetHitCount}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="초기 설정타발수" />
                    <DataGridTextColumn
                        Binding="{Binding EvalScore, StringFormat=N0}"
                        CellStyle="{DynamicResource NumericDataGridCell}"
                        Header="점수" />
                    <DataGridTextColumn Binding="{Binding EvalGrade}" Header="등급" />

                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter
                Grid.Column="1"
                Width="5"
                ResizeBehavior="PreviousAndNext" />
            <!--  입력 칸  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="9*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            x:Name="lblMsg"
                            Grid.Column="0"
                            Margin="1"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="Yellow"
                            Foreground="Red"
                            Visibility="Hidden">
                            <TextBlock x:Name="tbkMsg" Text="자료 입력 중" />
                        </Label>
                    </Grid>

                    <Grid
                        x:Name="grdInput1"
                        Grid.Row="1"
                        IsEnabled="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*" />
                            <ColumnDefinition Width="105*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="85*" />
                            <ColumnDefinition Width="105*" />
                            <ColumnDefinition Width="20*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  오른쪽 인풋  -->

                        <!--  금형번호  -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Style="{DynamicResource TextBlockInViewBoxInput}" Text="금형번호" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="txtMoldID"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="1"
                            IsReadOnly="True"
                            Style="{DynamicResource readOnlyTextBox}"
                            Text="{Binding MoldID}" />

                        <!--  금형LotNo  -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Style="{DynamicResource TextBlockInViewBoxInput}" Text="금형명" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="txtMoldNo"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="1"
                            Style="{DynamicResource essentialTextBox}"
                            Text="{Binding MoldNo}" />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Style="{DynamicResource TextBlockInViewBoxInput}" Text="금형종류" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="txtMoldKind"
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{DynamicResource TextBoxInputNecessary}"
                            Text="{Binding MoldKind}" />



                        <Grid
                            Grid.Row="3"
                            Grid.RowSpan="5"
                            Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2.5*" />
                                <RowDefinition Height="7.5*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Name="btnMoldArticleAdd"
                                    Grid.Column="2"
                                    Click="btnMoldArticleAdd_Click"
                                    IsEnabled="False">
                                    <TextBlock Text="추가" />
                                </Button>
                                <Button
                                    x:Name="btnMoldArticleDelete"
                                    Grid.Column="3"
                                    Click="btnMoldArticleDelete_Click"
                                    IsEnabled="False">
                                    <TextBlock Text="삭제" />
                                </Button>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12*" />
                                    <ColumnDefinition Width="23*" />
                                </Grid.ColumnDefinitions>
                                <DataGrid
                                    x:Name="dgdMoldArticle"
                                    Grid.ColumnSpan="2"
                                    Style="{DynamicResource DataGridSet1}">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Style.Resources>
                                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3399FF" />
                                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White" />
                                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3399FF" />
                                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White" />
                                            </Style.Resources>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <EventSetter Event="KeyDown" Handler="DataGird_KeyDown" />
                                            <EventSetter Event="KeyUp" Handler="DatagridIn_TextFocus" />
                                            <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                            <EventSetter Event="MouseUp" Handler="DataGridCell_MouseUp" />
                                        </Style>
                                    </DataGrid.CellStyle>
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="순번">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Margin="2"
                                                        HorizontalAlignment="Right"
                                                        Text="{Binding Num}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn
                                            Width="auto"
                                            MinWidth="100"
                                            Header="품번">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        Padding="5,0,0,0"
                                                        Background="#A9BCF5"
                                                        Tag="{Binding ArticleID, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        Text="{Binding BuyerArticleNo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <TextBox
                                                        Padding="5,0,0,0"
                                                        Foreground="Black"
                                                        Keyboard.KeyDown="txtBuyerArticleNo_KeyDown"
