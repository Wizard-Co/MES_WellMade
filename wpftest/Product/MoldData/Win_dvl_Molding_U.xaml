                                Text="{Binding AttFile2}" />
                            <Button
                                x:Name="btnDelPic2"
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Click="btnDelPic_Click"
                                Content="삭제"
                                Tag="2" />
                            <Button
                                x:Name="btnPreView2"
                                Grid.Row="1"
                                Grid.Column="3"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Click="btnPreView_Click"
                                Content="내려받기"
                                Tag="2" />

                            <Button
                                x:Name="btnInsPic3"
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Click="btnInsPic_Click"
                                Content="첨부3"
                                Tag="3" />
                            <TextBox
                                x:Name="txtAttFile3"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="1"
                                Tag="{Binding AttPath3}"
                                Text="{Binding AttFile3}" />
                            <Button
                                x:Name="btnDelPic3"
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Click="btnDelPic_Click"
                                Content="삭제"
                                Tag="3" />
                            <Button
                                x:Name="btnPreView3"
                                Grid.Row="2"
                                Grid.Column="3"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Click="btnPreView_Click"
                                Content="내려받기"
                                Tag="3" />

                            <Viewbox
                                Grid.RowSpan="3"
                                Grid.Column="4"
                                Margin="3"
                                HorizontalAlignment="Left">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="1"
                                        Foreground="Blue"
                                        Text="※내려받기는" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Margin="1"
                                        Foreground="Blue"
                                        Text="C:\Temp로" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="1"
                                        Foreground="Blue"
                                        Text="내려집니다." />
                                </Grid>
                            </Viewbox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.7*" />
                                <RowDefinition Height="5*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Viewbox Grid.Row="0" Margin="1">
                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    Text="금형사용부품등록" />
                            </Viewbox>

                            <DataGrid
                                x:Name="dgdPartsCode"
                                Grid.Row="1"
                                Margin="1"
                                IsReadOnly="True"
                                Style="{DynamicResource DataGridSet1}">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridCell">
                                        <EventSetter Event="KeyDown" Handler="DataGridCell_KeyDown" />
                                        <EventSetter Event="KeyUp" Handler="TextBoxFocusInDataGrid" />
                                        <EventSetter Event="MouseUp" Handler="TextBoxFocusInDataGrid_MouseUp" />
                                        <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding Num}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpePartsName"
                                        Width="*"
                                        Header="부품"
                                        SortMemberPath="MCPartName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding MCPartName}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Keyboard.KeyDown="dgdtxtMCPartName_KeyDown" Text="{Binding MCPartName}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn
                                        x:Name="dgdtpePartsCode"
                                        Width="*"
                                        Header="부품코드"
                                        SortMemberPath="McPartID">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Margin="2" Text="{Binding McPartID}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Keyboard.KeyDown="dgdtxtMCPartID_KeyDown" Text="{Binding McPartID}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.2*" />
                                </Grid.ColumnDefinitions>
                                <Viewbox
                                    Grid.Column="0"
                                    Margin="3"
                                    HorizontalAlignment="Left">
                                    <TextBlock Margin="2" Text="★사용부품별 교환/점검 설정타점수" />
                                </Viewbox>
                                <Button
                                    x:Name="btnSubAdd"
                                    Grid.Column="1"
                                    Margin="1"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Click="btnSubAdd_Click"
                                    Content="추가" />
                                <Button
                                    x:Name="btnSubDel"
                                    Grid.Column="2"
                                    Margin="1"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Click="btnSubDel_Click"
                                    Content="삭제" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
