<UserControl
    x:Class="WizMes_WellMade.Win_dvl_MoldRegularInspect_U"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions"
    xmlns:local="clr-namespace:WizMes_WellMade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="2"
            Background="{DynamicResource WizMes_WellMade}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblInspectDaySrh"
                    Grid.Column="0"
                    Margin="1"
                    MouseLeftButtonUp="lblInspectDaySrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkInspectDaySrh"
                                VerticalAlignment="Center"
                                Checked="chkInspectDaySrh_Checked"
                                Unchecked="chkInspectDaySrh_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 점검기간" />
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="42*" />
                    <ColumnDefinition Width="42*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="2"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnToday_Click"
                    Content="금일" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="95*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblMoldSrh"
                    Grid.Column="0"
                    Margin="1"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblMoldSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkMoldSrh"
                                VerticalAlignment="Center"
                                Checked="chkMoldSrh_Checked"
                                Unchecked="chkMoldSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text=" 금  형" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtMoldSrh"
                    Grid.Column="1"
                    Margin="1"
                    VerticalContentAlignment="Center"
                    IsEnabled="False"
                    KeyDown="txtMoldSrh_KeyDown" />
                <Button
                    x:Name="btnPfMoldSrh"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfMoldSrh_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>


            <Grid
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnAdd"
                        Grid.Column="0"
                        Margin="1"
                        Click="btnAdd_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiInsert}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblInsert}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnUpdate"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiUpdate}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblUpdate}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnDelete"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnDelete_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiDelete}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblDelete}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Column="0"
                        Margin="1"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnSave"
                        Grid.Column="1"
                        Margin="1"
                        Click="btnSave_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSave}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSave}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnCancel"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnCancel_Click"
                        Visibility="Hidden">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiCancle}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblCancle}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>


        </Grid>
        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                x:Name="dgdMoldInspect"
                Grid.Column="0"
                Margin="1"
                IsReadOnly="True"
                SelectionChanged="dgdMoldInspect_SelectionChanged"
                Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Num}" Header="순번" />
                    <DataGridTextColumn Binding="{Binding MoldInspectID}" Header="금형점검번호" />
                    <DataGridTextColumn Binding="{Binding MoldID}" Header="금형번호" />
                    <DataGridTextColumn
                        Binding="{Binding MoldInspectBasisID}"
                        Header="금형점검기준ID"
                        Visibility="Hidden" />
                    <DataGridTextColumn Binding="{Binding Person}" Header="작성자" />
                    <DataGridTextColumn Binding="{Binding HitCount}" Header="누적타발수" />
                    <DataGridTextColumn Binding="{Binding MoldInspectDate}" Header="점검일" />
                    <DataGridTextColumn Binding="{Binding Num}" Header="점검결과" />
                    <DataGridTextColumn Binding="{Binding Comments}" Header="비고" />
                </DataGrid.Columns>
            </DataGrid>

            <Border
                x:Name="bdrLeft"
                Grid.Column="2"
                Margin="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200*" />
                        <RowDefinition Height="155*" />
                        <RowDefinition Height="155*" />
                    </Grid.RowDefinitions>
                    <GroupBox
                        x:Name="grbMold"
                        Grid.Row="0"
                        Margin="1"
                        Header="금형점검"
                        IsEnabled="False">
                        <Grid x:Name="grdInput">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="20*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="95*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                            </Grid.RowDefinitions>
                            <Label
                                x:Name="lblMsg"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="Yellow"
                                Visibility="Hidden">
                                <TextBlock
                                    x:Name="tbkMsg"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="자료 입력 중" />
                            </Label>

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="금형점검번호" />
                            <TextBox
                                x:Name="txtMoldInspectID"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="1"
                                Background="#c2fdc3"
                                IsReadOnly="True"
                                Text="{Binding MoldInspectID}" />

                            <Label
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="품명" />
                            <TextBox
                                x:Name="txtArticle"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="1"
                                IsReadOnly="True"
                                Style="{DynamicResource TextBoxInputArea}"
                                Text="{Binding Article}" />


                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="금형번호" />
                            <TextBox
                                x:Name="txtMoldID"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="1"
                                KeyDown="txtMoldID_KeyDown"
                                Style="{DynamicResource TextBoxInputNecessary}"
                                Tag="{Binding MoldID}"
                                Text="{Binding MoldID}" />
                            <Button
                                x:Name="btnPfMoldID"
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="1"
                                Click="btnPfMoldID_Click">
                                <Image Source="{DynamicResource btiPlusFind}" />
                            </Button>

                            <Label
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="금형점검기준ID" />
                            <TextBox
                                x:Name="txtMoldBasisID"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="1"
                                IsReadOnly="True"
                                Style="{DynamicResource TextBoxInputArea}"
                                Text="{Binding MoldInspectBasisID}" />

                            <Label
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="점검일자" />
                            <DatePicker
                                x:Name="dtpMoldInspectDate"
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="1"
                                CalendarClosed="dtpMoldInspectDate_CalendarClosed"
                                PreviewKeyDown="dtpMoldInspectDate_PreviewKeyDown"
                                SelectedDate="{Binding MoldInspectDate}" />

                            <Label
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="점 검 자" />
                            <TextBox
                                x:Name="txtPerson"
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="1"
                                KeyDown="txtPerson_KeyDown"
                                Style="{DynamicResource TextBoxInputNecessary}"
                                Tag="{Binding MoldInspectPersonID}"
                                Text="{Binding MoldInspectPerson}" />
                            <Button
                                x:Name="btnPfPerson"
                                Grid.Row="6"
                                Grid.Column="2"
                                Margin="1"
                                Click="btnPfPerson_Click">
                                <Image Source="{DynamicResource btiPlusFind}" />
                            </Button>

                            <Label
                                Grid.Row="3"
                                Grid.Column="3"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="비     고" />
                            <TextBox
                                x:Name="txtComments"
                                Grid.Row="3"
                                Grid.RowSpan="3"
                                Grid.Column="4"
                                Margin="1"
                                AcceptsReturn="True"
                                Text="{Binding Comments}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Visible" />

                            <!--  점검주기구분  -->
                            <Label
                                Grid.Row="1"
                                Grid.Column="3"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="점검주기구분" />
                            <ComboBox
                                x:Name="cboInspectCycle"
                                Grid.Row="1"
                                Grid.Column="4"
                                Margin="1"
                                VerticalContentAlignment="Center"
                                SelectedValue="{Binding InspectCycle}"
                                SelectionChanged="cboInspectCycle_SelectionChanged"
                                Style="{DynamicResource ComboBoxInputString}" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="3"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="점검결과파일" />
                            <TextBox
                                x:Name="txtResultFile"
                                Grid.Row="2"
                                Grid.Column="4"
                                Margin="1"
                                VerticalContentAlignment="Center"
                                KeyDown="txtResultFile_KeyDown"
                                MouseDoubleClick="txtResultFile_Click"
                                Tag="{Binding FilePath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <Button
                                x:Name="btnImage"
                                Grid.Row="2"
                                Grid.Column="5"
                                Click="btnImage_Click"
                                Content="보기" />

                        </Grid>
                    </GroupBox>
                    <GroupBox
                        Grid.Row="1"
                        Margin="1"
                        Header="항목별 검사(범례)">
                        <DataGrid
                            x:Name="dgdMold_InspectSub1"
                            IsReadOnly="True"
                            SelectionUnit="Cell"
                            Style="{DynamicResource DataGridSet1}">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <EventSetter Event="KeyUp" Handler="TextBoxFocusInDataGrid" />
                                    <EventSetter Event="MouseUp" Handler="TextBoxFocusInDataGrid_MouseUp" />
                                    <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Num}" Header="순번" />
                                <DataGridTextColumn Binding="{Binding MoldInspectBasisID}" Header="점검기준번호" />
                                <DataGridTextColumn Binding="{Binding MoldInspectItemName}" Header="점검항목" />
                                <DataGridTextColumn Binding="{Binding MoldInspectContent}" Header="점검내용" />
                                <DataGridTextColumn Binding="{Binding MoldInspectCheckName}" Header="점검방법" />
                                <DataGridTextColumn Binding="{Binding MoldInspectCycleName}" Header="점검주기" />
                                <DataGridTemplateColumn
                                    x:Name="dgdtpeMldInspectLegend"
                                    Header="점검결과"
                                    SortMemberPath="MldInspectLegend">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="2" Text="{Binding MldInspectLegend, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding MldInspectLegend, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn x:Name="dgdtpeComments" Header="비고">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                            
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <GroupBox
                        Grid.Row="2"
                        Margin="1"
                        Header="항목별 검사(수치)">
                        <DataGrid
                            x:Name="dgdMold_InspectSub2"
                            IsReadOnly="True"
                            SelectionUnit="Cell"
                            Style="{DynamicResource DataGridSet1}">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <EventSetter Event="KeyUp" Handler="TextBoxFocusInDataGrid" />
                                    <EventSetter Event="MouseUp" Handler="TextBoxFocusInDataGrid_MouseUp" />
                                    <EventSetter Event="GotFocus" Handler="DataGridCell_GotFocus" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Num}" Header="순번" />
                                <DataGridTextColumn Binding="{Binding MoldInspectBasisID}" Header="점검기준번호" />
                                <DataGridTextColumn Binding="{Binding MoldInspectItemName}" Header="점검항목" />
                                <DataGridTextColumn Binding="{Binding MoldInspectContent}" Header="점검내용" />
                                <DataGridTextColumn Binding="{Binding MoldInspectCheckName}" Header="점검방법" />
                                <DataGridTextColumn Binding="{Binding MoldInspectCycleName}" Header="점검주기" />
                                <DataGridTemplateColumn
                                    x:Name="dgdtpeMldValue"
                                    Header="점검결과"
                                    SortMemberPath="MldValue">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding MldValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox
                                                InputMethod.IsInputMethodEnabled="False"
                                                PreviewTextInput="TextBoxOnlyNumber_PreviewTextInput"
                                                Text="{Binding MldValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn
                                    x:Name="dgdtpeComments2"
                                    Header="비고"
                                    SortMemberPath="Comments">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
