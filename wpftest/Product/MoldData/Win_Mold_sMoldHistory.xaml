<UserControl
    x:Class="WizMes_WellMade.Win_Mold_sMoldHistory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions"
    xmlns:local="clr-namespace:WizMes_WellMade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Margin="2"
            Background="{DynamicResource WizMes_WellMade}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="230*" />
                <ColumnDefinition Width="130*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblDateSrh"
                    Grid.Column="0"
                    Margin="1"
                    MouseLeftButtonUp="lblDateSrh_MouseLeftButtonUp">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkDateSrh"
                                VerticalAlignment="Center"
                                Checked="chkDateSrh_Checked"
                                Unchecked="chkDateSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text="입출/사용일" />
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False" />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*" />
                    <ColumnDefinition Width="42*" />
                    <ColumnDefinition Width="42*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="2"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="btnToday_Click"
                    Content="금일" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblLotNoSrh"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblLotNoSrh_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkLotNoSrh"
                                Checked="chkLotNoSrh_Checked"
                                Unchecked="chkLotNoSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock Margin="-5,0,0,0" Text="금형 로트번호" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtLotNoSrh"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False" />

            </Grid>

            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblArticleSrh"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblArticleSrh_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkArticleSrh"
                                Checked="chkArticleSrh_Checked"
                                Unchecked="chkArticleSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock Margin="-5,0,0,0" Text="품     명" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtArticleSrh"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False"
                    Keyboard.KeyDown="txtArticleSrh_KeyDown" />
                <Button
                    x:Name="btnPfArticleSrh"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfArticleSrh_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85*" />
                    <ColumnDefinition Width="105*" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblBuyerArticleNoSrh"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    MouseLeftButtonUp="lblBuyerArticleNoSrh_MouseLeftButtonUp">
                    <StackPanel Margin="-2" Orientation="Horizontal">
                        <Viewbox>
                            <CheckBox
                                x:Name="chkBuyerArticleNoSrh"
                                Checked="chkBuyerArticleNoSrh_Checked"
                                Unchecked="chkBuyerArticleNoSrh_Unchecked" />
                        </Viewbox>
                        <TextBlock Margin="-5,0,0,0" Text="품     번" />
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="txtBuyerArticleNoSrh"
                    Grid.Column="1"
                    Margin="1"
                    IsEnabled="False"
                    Keyboard.KeyDown="txtBuyerArticleNoSrh_KeyDown" />
                <Button
                    x:Name="btnPfBuyerArticleNoSrh"
                    Grid.Column="2"
                    Margin="1"
                    Click="btnPfBuyerArticleNoSrh_Click"
                    IsEnabled="False">
                    <Image Source="{DynamicResource btiPlusFind}" />
                </Button>
            </Grid>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Column="2"
                        Margin="1"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Margin="1"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>


        </Grid>
        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DataGrid
                x:Name="dgdMain"
                Grid.Column="0"
                Margin="1"
                IsReadOnly="True"
                SelectionChanged="dgdMain_SelectionChanged"
                Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Num}"
                        Header="순번" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MoldID}"
                        Header="금형번호" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding BuyerArticleNo}"
                        Header="품번" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Article}"
                        Header="품명" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding HitCount}"
                        Header="현재타발수" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SetProdQty}"
                        Header="한계타발수" />
                </DataGrid.Columns>
            </DataGrid>

            <Border
                x:Name="bdrLeft"
                Grid.Column="2"
                Margin="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="10*" />
                    </Grid.RowDefinitions>
                    <GroupBox
                        x:Name="grbMold"
                        Grid.Row="0"
                        Margin="1"
                        Header="금형이력상세"
                        IsEnabled="False">
                        <Grid x:Name="grdInput">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="80*" />
                                <ColumnDefinition Width="20*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                                <RowDefinition Height="22*" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="금형번호" />
                            <TextBox
                                x:Name="txtMoldID"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="1"
                                Style="{DynamicResource TextBoxInputNecessary}"
                                Tag="{Binding MoldID}"
                                Text="{Binding MoldID}" />

                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="금형명" />
                            <TextBox
                                x:Name="txtMoldNo"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="1"
                                IsReadOnly="True"
                                Style="{DynamicResource TextBoxInputArea}"
                                Text="{Binding MoldNo}" />

                            <Label
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="1"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="대표 (반)제품명" />
                            <TextBox
                                x:Name="txtArticle"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="1"
                                Text="{Binding Article}" />
                        </Grid>
                    </GroupBox>
                    <DataGrid
                        x:Name="dgdSub"
                        Grid.Row="2"
                        Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Num}"
                                CellStyle="{DynamicResource DataGridCellAndCentering}"
                                Header="순" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding WorkDate}"
                                CellStyle="{DynamicResource DataGridCellAndCentering}"
                                Header="사용일자" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Hitcount, StringFormat=N0}"
                                CellStyle="{DynamicResource NumericDataGridCell}"
                                Header="타발수" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Process}"
                                CellStyle="{DynamicResource NonNumericDataGridCell}"
                                Header="공정" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Machine}"
                                CellStyle="{DynamicResource NonNumericDataGridCell}"
                                Header="호기" />
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
