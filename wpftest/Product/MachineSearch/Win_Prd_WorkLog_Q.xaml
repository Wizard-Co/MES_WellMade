<UserControl
    x:Class="WizMes_WellMade.Win_Prd_WorkLog_Q"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_WellMade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <!--  전체 중 상단  -->
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_WellMade}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblDateSrh"
                    Grid.Column="0"
                    Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox
                                x:Name="chkDateSrh"
                                VerticalAlignment="Center"
                                IsChecked="True"
                                IsEnabled="False" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Style="{DynamicResource TextBlockInViewBoxSearch}" Text="일 자" />
                        </Viewbox>
                    </StackPanel>
                </Label>
                <DatePicker
                    x:Name="dtpSDate"
                    Grid.Column="1"
                    IsEnabled="True"
                    Style="{DynamicResource DatePickerSearch}" />
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>
                <DatePicker
                    x:Name="dtpEDate"
                    Grid.Column="1"
                    IsEnabled="True"
                    Style="{DynamicResource DatePickerSearch}" />
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnLastMonth"
                    Grid.Column="0"
                    Click="btnLastMonth_Click"
                    Content="전월" />
                <Button
                    x:Name="btnYesterDay"
                    Grid.Column="1"
                    Click="btnYesterday_Click"
                    Content="전일" />
                <Button
                    x:Name="btnThisMonth"
                    Grid.Column="2"
                    Click="btnThisMonth_Click"
                    Content="금월" />
                <Button
                    x:Name="btnToday"
                    Grid.Column="3"
                    Click="btnToday_Click"
                    Content="금일" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblProcess"
                    Grid.Column="0"
                    Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox
                                x:Name="chkProcess"
                                VerticalAlignment="Center"
                                IsChecked="True"
                                IsEnabled="False" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Style="{DynamicResource TextBlockInViewBoxSearch}" Text="공 정 명" />
                        </Viewbox>
                    </StackPanel>
                </Label>
                <ComboBox
                    x:Name="cboProcess"
                    Grid.Column="1"
                    IsEnabled="True"
                    SelectionChanged="cboProcess_SelectionChanged"
                    Style="{DynamicResource ComboBoxSearchString}" />
            </Grid>

            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblMachine"
                    Grid.Column="0"
                    Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox
                                x:Name="chkMachine"
                                VerticalAlignment="Center"
                                IsChecked="True"
                                IsEnabled="False" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Style="{DynamicResource TextBlockInViewBoxSearch}" Text="호     기" />
                        </Viewbox>
                    </StackPanel>
                </Label>
                <ComboBox
                    x:Name="cboMachine"
                    Grid.Column="1"
                    IsEnabled="True"
                    Style="{DynamicResource ComboBoxSearchString}" />
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.Column="2"
                Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="lblGubun"
                    Grid.Column="0"
                    Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox
                                x:Name="chkGubun"
                                VerticalAlignment="Center"
                                IsChecked="True"
                                IsEnabled="False" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock VerticalAlignment="Center" Text="구     분" />
                        </Viewbox>

                    </StackPanel>
                </Label>
                <ComboBox
                    x:Name="cboGubun"
                    Grid.Column="1"
                    Margin="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="White"
                    IsEnabled="True" />
            </Grid>

            <Grid Grid.RowSpan="4" Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSearch"
                        Grid.Column="2"
                        Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiSearch}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Grid.Column="3"
                        Click="btnClose_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiClose}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnExcel"
                        Grid.Column="3"
                        Click="btnExcel_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                VerticalAlignment="Center"
                                Source="{DynamicResource btiExcel}"
                                Style="{DynamicResource imgSize}" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <!--  //전체 중 상단  -->

        <!--  전체 중 하단  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="510*" />
                <RowDefinition Height="22*" />
            </Grid.RowDefinitions>
            <DataGrid x:Name="dgdMain" Style="{DynamicResource DataGridSet1}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Num}"
                        ElementStyle="{StaticResource DataGridCellCenter}"
                        Header="No" />
                    <DataGridTextColumn
                        Binding="{Binding WorkDate_CV}"
                        ElementStyle="{StaticResource DataGridCellCenter}"
                        Header="일자" />
                    <DataGridTextColumn
                        Binding="{Binding WorkTime_CV}"
                        ElementStyle="{StaticResource DataGridCellCenter}"
                        Header="시간" />
                    <DataGridTextColumn
                        Binding="{Binding Process}"
                        ElementStyle="{StaticResource DataGridCellLeft}"
                        Header="공정" />
                    <DataGridTextColumn
                        Binding="{Binding MachineNo}"
                        ElementStyle="{StaticResource DataGridCellRight}"
                        Header="호기" />
                    <DataGridTextColumn
                        Binding="{Binding TensileValue}"
                        ElementStyle="{StaticResource DataGridCellRight}"
                        Header="인장값" />
                    <DataGridTextColumn
                        Binding="{Binding WorkQty}"
                        ElementStyle="{StaticResource DataGridCellRight}"
                        Header="생산량" />
                    <DataGridTextColumn
                        Binding="{Binding TotalWorkQty}"
                        ElementStyle="{StaticResource DataGridCellRight}"
                        Header="총 생산량" />
                    <DataGridTextColumn
                        Binding="{Binding DefectQty}"
                        ElementStyle="{StaticResource DataGridCellRight}"
                        Header="불량량" />
                    <DataGridTextColumn
                        Binding="{Binding CT}"
                        ElementStyle="{StaticResource DataGridCellRight}"
                        Header="Cycle Time" />
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock
                x:Name="tblCnt"
                Grid.Row="1"
                Text="▶검색 결과 : " />
        </Grid>
        <!--  //전체 중 하단  -->
    </Grid>
</UserControl>
