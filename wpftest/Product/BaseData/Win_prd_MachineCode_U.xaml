<UserControl
    x:Class="WizMes_WellMade.Win_prd_MachineCode_U"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WizMes_WellMade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="620"
    d:DesignWidth="820"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="532*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource WizMes_WellMade}">
            <Grid.RowDefinitions>
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
                <RowDefinition Height="22*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <Grid
                x:Name="GridSearch1"
                Grid.Row="0"
                Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="90*" />
                    <ColumnDefinition Width="15*" />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="LabelProcessSearch"
                    Grid.Column="0"
                    MouseLeftButtonDown="LabelProcessSearch_MouseLeftButtonDown"
                    Style="{DynamicResource LabelSearch}">
                    <StackPanel Style="{DynamicResource StackPanelInLabel}">
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <CheckBox
                                x:Name="CheckBoxProcessSearch"
                                VerticalAlignment="Center"
                                Checked="CheckBoxProcessSearch_Checked"
                                Unchecked="CheckBoxProcessSearch_Unchecked" />
                        </Viewbox>
                        <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                            <TextBlock Style="{DynamicResource TextBlockInViewBoxSearch}" Text="공정명" />
                        </Viewbox>
                    </StackPanel>
                </Label>
                <TextBox
                    x:Name="TextBoxProcessSearch"
                    Grid.Column="1"
                    KeyDown="TextBoxProcessSearch_KeyDown"
                    Style="{DynamicResource TextBoxSearch}" />
            </Grid>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    x:Name="btnAdd"
                    Grid.Row="0"
                    Grid.Column="0"
                    Click="btnAdd_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiInsert}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblInsert}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnUpdate"
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="btnUpdate_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiUpdate}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblUpdate}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnDelete"
                    Grid.Row="0"
                    Grid.Column="2"
                    Click="btnDelete_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiDelete}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblDelete}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnClose"
                    Grid.Row="0"
                    Grid.Column="3"
                    Click="btnClose_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiClose}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblClose}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>

                <Button
                    x:Name="btnSearch"
                    Grid.Row="1"
                    Grid.Column="0"
                    Click="btnSearch_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiSearch}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSearch}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnSave"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="btnSave_Click"
                    Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiSave}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblSave}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnCancel"
                    Grid.Row="1"
                    Grid.Column="2"
                    Click="btnCancel_Click"
                    Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiCancle}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblCancle}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnExcel"
                    Grid.Row="1"
                    Grid.Column="3"
                    Click="btnExcel_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            Source="{DynamicResource btiExcel}"
                            Style="{DynamicResource imgSize}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding Source={StaticResource tblExcel}, Mode=OneWay, Path=Text}" />
                    </StackPanel>
                </Button>

            </Grid>

        </Grid>

        <Grid Grid.Row="1" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="639*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="180*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="GridColumn1" Width="318*" />
                    <ColumnDefinition x:Name="GridColumn2" Width="1*" />
                    <ColumnDefinition x:Name="GridColumn3" Width="320*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="512*" />
                        <RowDefinition Height="22*" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        x:Name="DataGridMain"
                        Grid.Row="0"
                        IsReadOnly="True"
                        SelectionChanged="DataGridMain_SelectionChanged"
                        Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Num}"
                                Header="No" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding ProcessID}"
                                Header="코드" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Process}"
                                Header="공정명" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock
                        x:Name="TextBlockCountMain"
                        Grid.Row="2"
                        Text=" ▶ 검색 결과 : " />

                </Grid>

                <GridSplitter
                    Grid.Column="1"
                    Width="1"
                    ResizeBehavior="PreviousAndNext" />

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="512*" />
                        <RowDefinition Height="22*" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        x:Name="DataGridSub"
                        Grid.Row="0"
                        Grid.Column="2"
                        SelectionChanged="DataGridSub_SelectionChanged"
                        Style="{DynamicResource DataGridSet1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Num}"
                                Header="No" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding MachineID}"
                                Header="코드" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Machine}"
                                Header="기계명" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding MachineNO}"
                                Header="호기" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding SetHitCount}"
                                Header="설정타점수" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding ProductLocName}"
                                Header="실적창고" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding CommStationNo}"
                                Header="통신StationNo" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding CommIP}"
                                Header="통신IP" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding CommCollectionYN}"
                                Header="통신수집(Y/N)" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock
                        x:Name="TextBlockCountSub"
                        Grid.Row="2"
                        Text=" ▶ 검색 결과 : " />

                </Grid>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="22*" />
                    <RowDefinition Height="510*" />
                </Grid.RowDefinitions>
                <Label
                    x:Name="lblMsg"
                    Grid.Row="0"
                    Style="{DynamicResource LabelStateMessage}">
                    <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                        <TextBlock
                            x:Name="tbkMsg"
                            Margin="0"
                            FontWeight="Bold"
                            Text="자료 입력 중" />
                    </Viewbox>
                </Label>

                <Grid
                    x:Name="GridInputArea"
                    Grid.Row="1"
                    IsHitTestVisible="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="220*" />
                        <RowDefinition Height="290*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75*" />
                            <ColumnDefinition Width="90*" />
                            <ColumnDefinition Width="15*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />

                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                            <RowDefinition Height="22*" />
                        </Grid.RowDefinitions>

                        <!--  코드  -->
                        <Label
                            x:Name="LabelCode"
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox x:Name="ViewBoxCode" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockCode"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="코  드" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="TextBoxCode"
                            Grid.Row="0"
                            Grid.Column="1"
                            PreviewTextInput="TextBoxCheckIsNumeric_PreviewTextInput"
                            Style="{DynamicResource TextBoxInputNecessary}"
                            Text="{Binding MachineID}" />

                        <!--  기계명  -->
                        <Label
                            x:Name="LabelMachineName"
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox x:Name="ViewBoxMachineName" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockMachineName"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="기계명" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="TextBoxMachineName"
                            Grid.Row="1"
                            Grid.Column="1"
                            KeyDown="TextBoxMachineName_KeyDown"
                            Style="{DynamicResource TextBoxInputNecessary}"
                            Text="{Binding Machine}" />

                        <!--  호기  -->
                        <Label
                            x:Name="LabelMachineNo"
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox x:Name="ViewBoxMachineNo" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockMachineNo"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="호  기" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="TextBoxMachineNo"
                            Grid.Row="2"
                            Grid.Column="1"
                            KeyDown="TextBoxMachineNo_KeyDown"
                            Style="{DynamicResource TextBoxInputArea}"
                            Text="{Binding MachineNO}" />

                        <!--  설정 타점수  -->
                        <Label
                            x:Name="LabelSetHitCount"
                            Grid.Row="3"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}"
                            Visibility="Hidden">
                            <Viewbox x:Name="ViewBoxSetHitCount" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockSetHitCount"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="설정 타점수" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="TextBoxSetHitCount"
                            Grid.Row="3"
                            Grid.Column="1"
                            KeyDown="TextBoxSetHitCount_KeyDown"
                            PreviewTextInput="TextBoxCheckIsNumeric_PreviewTextInput"
                            Style="{DynamicResource TextBoxInputArea}"
                            Text="{Binding SetHitCount}"
                            Visibility="Hidden" />

                        <!--  실적 창고 콤보  -->
                        <Label
                            x:Name="LabelProductLoc"
                            Grid.Row="3"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox x:Name="ViewBoxProductLoc" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockProductLoc"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="실적 창고" />
                            </Viewbox>
                        </Label>
                        <ComboBox
                            x:Name="ComboBoxProductLoc"
                            Grid.Row="3"
                            Grid.Column="1"
                            DropDownClosed="ComboBoxProductLoc_DropDownClosed"
                            KeyDown="ComboBoxProductLoc_KeyDown"
                            SelectedValue="{Binding ProductLocID}"
                            Style="{DynamicResource ComboBoxInputString}" />

                        <!--  통신 설정  -->
                        <Label
                            x:Name="LabelCommStationNo"
                            Grid.Row="4"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox x:Name="ViewBoxCommStationNo" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockCommStationNo"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="통신 StationNo" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="TextBoxCommStationNo"
                            Grid.Row="4"
                            Grid.Column="1"
                            KeyDown="TextBoxCommStationNo_KeyDown"
                            Style="{DynamicResource TextBoxInputArea}"
                            Text="{Binding CommStationNo}" />

                        <!--  통신 IP  -->
                        <Label
                            x:Name="LabelCommIP"
                            Grid.Row="6"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}"
                            Visibility="Hidden">
                            <Viewbox x:Name="ViewBoxCommIP" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockCommIP"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="통신 IP" />
                            </Viewbox>
                        </Label>
                        <TextBox
                            x:Name="TextBoxCommIP"
                            Grid.Row="6"
                            Grid.Column="1"
                            KeyDown="TextBoxCommIP_KeyDown"
                            Style="{DynamicResource TextBoxInputArea}"
                            Text="{Binding CommIP}"
                            Visibility="Hidden" />

                        <!--  통신 수집(Y/N) 콤보  -->
                        <Label
                            x:Name="LabelCommCollectionYN"
                            Grid.Row="5"
                            Grid.Column="0"
                            Style="{DynamicResource LabelInputArea}">
                            <Viewbox x:Name="ViewBoxCommCollectionYN" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock
                                    x:Name="TextBlockCommCollectionYN"
                                    Style="{DynamicResource TextBlockInViewBoxInput}"
                                    Text="통신 자동수집(Y/N)" />
                            </Viewbox>
                        </Label>
                        <Grid Grid.Row="5" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="10*" />
                            </Grid.ColumnDefinitions>
                            <ComboBox
                                x:Name="ComboBoxCommCollectionYN"
                                Grid.Column="0"
                                DropDownClosed="ComboBoxCommCollectionYN_DropDownClosed"
                                SelectedValue="{Binding CommCollectionYN}"
                                Style="{DynamicResource ComboBoxInputString}" />
                        </Grid>


                    </Grid>

                </Grid>

            </Grid>

        </Grid>

    </Grid>
</UserControl>
