<UserControl x:Class="WizMes_WellMade.Win_Qul_DateBox_Q"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dgx="clr-namespace:DataGridExtensions;assembly=DataGridExtensions" 
             xmlns:local="clr-namespace:WizMes_WellMade"
             mc:Ignorable="d" d:DesignHeight="620" d:DesignWidth="820" Loaded="Window_InsDateBox_Loaded" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="532*"/>
        </Grid.RowDefinitions>

        <!-- 화면 상단 / 조회(검색) 조건 화면라인 -->
        <Grid Grid.Column="0" Grid.Row="0" Background="{DynamicResource WizMes_WellMade}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*" />
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="180*" />
                <ColumnDefinition Width="200*" />
            </Grid.ColumnDefinitions>

            <!-- 출고 일자, 날짜버튼 모음-->
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="95*"/>
                    </Grid.ColumnDefinitions>

                    <Label  Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="chkInspectDay_Click" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox VerticalAlignment="Center">
                                <CheckBox x:Name="chkInspectDay"  Click="chkInspectDay_Click" IsChecked="False" ></CheckBox>
                            </Viewbox>
                            <TextBlock Text="검사 일자" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                        </StackPanel>
                    </Label>
                    <DatePicker x:Name="dtpFromDate" Grid.Column="1" Grid.Row="0" Padding="0" Style="{DynamicResource DatePickerSearch}"/>
                    <DatePicker x:Name="dtpToDate"  Grid.Column="1" Grid.Row="1" Padding="0" Style="{DynamicResource DatePickerSearch}"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnLastMonth" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전월" Margin="1" Click="btnLastMonth_Click"/>
                    <Button x:Name="btnThisMonth" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금월" Margin="1" Click="btnThisMonth_Click" />
                    <Button x:Name="btnYesterDay" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="전일" Margin="1" Click="btnYesterDay_Click"/>
                    <Button x:Name="btnToday" Grid.Column="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="금일" Margin="1" Click="btnToday_Click"/>
                </Grid>
            </Grid>

            <!-- 제품그룹, 품명 모음 -->
            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkCustomIDSrh" Click="CommonControl_Click" ></CheckBox>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="거 래 처" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtCustomIDSrh" Grid.Column="1" Grid.Row="0" 
                         KeyDown="txtCustomIDSrh_KeyDown" Style="{DynamicResource TextBoxSearch}"/>
                    <Button x:Name="btnCustomIDSrh" Grid.Column="2" Grid.Row="0" Click="btnCustomIDSrh_Click" IsEnabled="False">
                        <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}"/>
                    </Button>
                </Grid>

                <!--품명-->
                <Grid Grid.Row="1" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="2" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch_Q}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel_Q}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight_Q}">
                                <CheckBox x:Name="chkArticleIDSrh" Click="CommonControl_Click"  VerticalAlignment="Center"/>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight_Q}">
                                <TextBlock Text="품     명" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtArticleIDSrh" Grid.Row="2" Grid.Column="1" KeyDown="txtArticleIDSrh_KeyDown" Style="{DynamicResource TextBoxSearch_Q}"/>
                    <Button x:Name="btnArticleIDSrh" Grid.Row="2" Grid.Column="2" Click="btnArticleIDSrh_Click"  IsEnabled="False">
                        <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}"/>
                    </Button>
                </Grid>


                <!--품명-->
                <Grid Grid.Row="2" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Grid.Row="1" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch_Q}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel_Q}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight_Q}">
                                <CheckBox x:Name="chkBuyerArticleNoSrh" Click="CommonControl_Click" ></CheckBox>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight_Q}">
                                <TextBlock Text="품     번" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtBuyerArticleNoSrh" Grid.Column="1" Grid.Row="1" KeyDown="txtBuyerArticleNoSrh_KeyDown" Style="{DynamicResource TextBoxSearch_Q}"/>
                    <Button x:Name="btnBuyerArticleNoSrh"  Grid.Column="2" Grid.Row="1" Click="btnBuyerArticleNoSrh_Click"  IsEnabled="False">
                        <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}"/>
                    </Button>
                </Grid>




                <!--<Button x:Name="btnArticle"  Grid.Column="3" Grid.Row="1" Click="btnArticle_Click">
                    <Image Source="{DynamicResource btiPlusFind}" Style="{DynamicResource imgPlusFind}"/>
                </Button>-->
            </Grid>

            <!-- 이전이후창고 / 출고구분 모음 -->
            <Grid Grid.Column="3" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="80*"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>

                <!--불량유형-->
                <Grid Grid.Row="0" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/> 
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkDefectGrpIDSrh" Click="CommonControl_Click"  />
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="불량유형" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <ComboBox x:Name="cboDefectGrpIDSrh" Grid.Column="1" Grid.Row="0" Style="{DynamicResource ComboBoxSearchString}"/>
                </Grid>

                <!--박스번호-->
                <Grid Grid.Row="1" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Grid.Row="2" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox VerticalAlignment="Center" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkBLabelSrh"  Click="CommonControl_Click" />
                            </Viewbox>
                            <Viewbox VerticalAlignment="Center" Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="박스번호" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtBLabelSrh" Grid.Column="1" Grid.Row="2" Style="{DynamicResource TextBoxSearch}" />
                </Grid>

   


                <!--공정라벨-->
                <Grid Grid.Row="3" Grid.ColumnSpan="3" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/> 
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Grid.Row="1" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkCLabelSrh"  Click="CommonControl_Click" ></CheckBox>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock Text="공정라벨" Style="{DynamicResource TextBlockInViewBoxSearch_Q}" />
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtCLabelSrh" Grid.Column="1" Grid.Row="1" Style="{DynamicResource TextBoxSearch}"/>
                </Grid>

                <!--관리번호-->
                <Grid Grid.Row="2" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Grid.Row="3" MouseLeftButtonUp="CommonControl_Click" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <CheckBox x:Name="chkOrderIDSrh" Click="CommonControl_Click" ></CheckBox>
                            </Viewbox>
                            <Viewbox Style="{DynamicResource ViewBoxSetMaxMinHeight}">
                                <TextBlock x:Name="tblOrderID" Text="관리번호" Style="{DynamicResource TextBlockInViewBoxSearch_Q}"/>
                            </Viewbox>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="txtOrderIDSrh"  Grid.Column="1" Grid.Row="3" Style="{DynamicResource TextBoxSearch}"/>
                </Grid>

                <!--관리번호 OrderNo 라디오버튼-->
                <Grid Grid.Row="3" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="3" Style="{DynamicResource LabelSearch}">
                        <StackPanel Style="{DynamicResource StackPanelInLabel}">
                            <RadioButton x:Name="rbnOrderNoSrh" Content="Order No." Click="rbnOrderNoSrh_Click" Margin="1"></RadioButton>
                            <RadioButton x:Name="rbnManageNumberSrh" Content="관리 번호" Click="rbnManageNumberSrh_Click" Margin="1"  ></RadioButton>
                        </StackPanel>
                    </Label>
                </Grid>

            </Grid>

                
            <!-- 검색/닫기/엑셀 버튼 -->
            <Grid  Grid.Column="5" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 검색(조회) 버튼 -->
                <Button x:Name="btnSearch" Grid.Column="2" Grid.Row="0"  Click="btnSearch_Click"  Margin="1" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiSearch}" Style="{DynamicResource imgSize}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Source={StaticResource tblSearch},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- 닫기 버튼 -->
                <Button x:Name="btnClose"  Grid.Column="3" Grid.Row="0"  Click="btnClose_Click" Margin="1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiClose}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblClose},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- 엑셀 버튼 -->
                <Button x:Name="btnExcel"  Grid.Column="3" Grid.Row="1"  Click="btnExcel_Click" Margin="1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource btiExcel}" Style="{DynamicResource imgSize}" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Source={StaticResource tblExcel},Mode=OneWay,Path=Text}" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>


                <Button x:Name="btnMultiSort" Grid.Column="3" Grid.Row="2" Click="btnMultiSort_Click" 
                        Content="정렬" Margin="1" Visibility="Hidden">
                </Button>

            </Grid>
        </Grid>

        <!-- 화면 중단, 데이터그리드 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Margin="2" Grid.Column="0" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="19*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="dgdInspect" Style="{DynamicResource DataGridSet1}" Grid.ColumnSpan="2" >
                    <!--dgx:DataGridFilter.IsAutoFilterEnabled="True" -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#3399FF"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#3399FF" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
                            </Style.Resources>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Color1}" Value="true">
                                    <Setter Property="Background" Value="LightGray" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Color2}" Value="true">
                                    <Setter Property="Background" Value="#BDBDBD" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="순번" Width="auto" Binding="{Binding num}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="검사일자" Width="auto" Binding="{Binding ExamDate}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="거래처" Width="auto" Binding="{Binding KCustom}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn x:Name="dtxOrderID" Header="관리번호" Width="auto" Binding="{Binding OrderID}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn x:Name="dtxOrderNo" Header="오더번호" Width="auto" Binding="{Binding OrderNo}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="모델" Width="auto" Binding="{Binding Model}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="품번" Width="auto" Binding="{Binding BuyerArticleNo}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="품명" Width="auto" Binding="{Binding Article}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="수주량" Width="auto" Binding="{Binding OrderQty}" ElementStyle="{DynamicResource DataGridCellRight}"/>
                        <DataGridTextColumn Header="라벨번호" Width="auto" Binding="{Binding LabelID}" ElementStyle="{DynamicResource DataGridCellLeft}"/>
                        <DataGridTextColumn Header="박스번호" Width="auto" Binding="{Binding InBoxID}" ElementStyle="{DynamicResource DataGridCellLeft}"/>
                        <DataGridTextColumn Header="검사량" Width="auto" Binding="{Binding RealQty}" ElementStyle="{DynamicResource DataGridCellRight}"/>
                        <DataGridTextColumn Header="합격량" Width="auto" Binding="{Binding CtrlQty}" ElementStyle="{DynamicResource DataGridCellRight}"/>
                        <DataGridTextColumn Header="불량수량" Width="auto" Binding="{Binding DefectQty}" ElementStyle="{DynamicResource DataGridCellRight}"/>
                        <DataGridTextColumn Header="단위" Width="auto" Binding="{Binding UnitClssName}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="검사자" Width="auto" Binding="{Binding Name}" ElementStyle="{DynamicResource DataGridCellCenter}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="0" Grid.Row="1" >
                <!--<DataGrid x:Name="dgdTotal" Style="{DynamicResource DataGridSet1}" >
                    --><!--dgx:DataGridFilter.IsAutoFilterEnabled="True" --><!--
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=ColorGreen}" Value="true">
                                    <Setter Property="Background" Value="#EAEAEA" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=ColorRed}" Value="true">
                                    <Setter Property="Background" Value="#365fb1" />
                                    <Setter Property="Foreground" Value="White" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="" Width="0.3*"  Binding="{Binding Path=ExamDate }" 
                                ElementStyle="{StaticResource DataGridCellCenter}"/>

                        <DataGridTextColumn Header="검사" Width="1*"  Binding="{Binding Path=CtrlQty}" 
                                ElementStyle="{StaticResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="합격박스" Width="1*" Binding="{Binding Path=PassRoll}" 
                                ElementStyle="{StaticResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="합격량" Width="1*"  Binding="{Binding Path=PassQty}" 
                                ElementStyle="{StaticResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="불량박스" Width="1*"  Binding="{Binding Path=DefectRoll}" Visibility="Hidden"
                                ElementStyle="{StaticResource DataGridCellCenter}"/>
                        <DataGridTextColumn Header="불량수량" Width="1*" Binding="{Binding Path=DefectQty}" ElementStyle="{StaticResource DataGridCellCenter}"/>


                    </DataGrid.Columns>
                </DataGrid>-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>
                    <DataGridRowHeader Grid.Column="0" Content="합 계" Style="{StaticResource RowHeaderStyle}"/>
                    <DataGrid x:Name="dgdTotal" HeadersVisibility="Column" Style="{DynamicResource DataGridSet1}" Grid.Column="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="건수" Width="*" Binding="{Binding Path=TotalCount,StringFormat={}{0:N0}}" ElementStyle="{DynamicResource DataGridCellCenter}" />
                            <DataGridTextColumn Header="검사수량" Width="*" Binding="{Binding Path=TotalRealQty, StringFormat={}{0:N0}}"  ElementStyle="{DynamicResource DataGridCellCenter}" />
                            <DataGridTextColumn Header="합격수량" Width="*" Binding="{Binding Path=TotalCtrlQty,StringFormat={}{0:N0}}" ElementStyle="{DynamicResource DataGridCellCenter}" />
                            <DataGridTextColumn Header="합격수량" Width="*" Binding="{Binding Path=TotalDefectQty,StringFormat={}{0:N0}}" ElementStyle="{DynamicResource DataGridCellCenter}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
