<Window x:Class="WizMes_WellMade.PopUp.ScreenShot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WizMes_WellMade.PopUp"
      mc:Ignorable="d" Loaded="ScreenShot_Loaded"
      d:DesignHeight="620" d:DesignWidth="820"
      Title="스크린샷 캡쳐">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="99*"/>
        </Grid.RowDefinitions>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="btnSaveNameOther" Header="다른이름으로 저장" Click="btnSaveNameOther_Click"/>
                <MenuItem x:Name="btnClose" Header="닫기" Click="btnClose_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
        <Viewbox Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
            <TextBlock Text="※우클릭을 눌러 다른이름으로 파일을 저장할 수 있습니다." Foreground="Blue" FontWeight="Bold"/>
        </Viewbox>
        <Image Grid.Row="1" x:Name="ImageData" Margin="25"/>
    </Grid>
</Window>
